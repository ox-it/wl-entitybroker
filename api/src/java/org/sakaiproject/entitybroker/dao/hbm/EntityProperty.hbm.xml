<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
   <!-- put your value object in the class name, 
      the table name is optional but you should specify it to avoid collisions -->
   <class name="org.sakaiproject.entitybroker.dao.model.EntityProperty"
      table="ENTITY_PROPERTIES">

      <!-- create the primary key id, using native is typically the best way -->
      <id name="id" type="java.lang.Long" unsaved-value="null">
         <column name="ID" />
         <generator class="native">
            <param name="sequence">ENTITY_PROP_ID_SEQ</param>
         </generator>
      </id>
      <property name="entityRef" type="string" length="255" not-null="true"
         index="ENTITY_PROPERTY_REFERENCE" />
      <property name="entityPrefix" type="string" length="255" not-null="true"
         index="ENTITY_PROPERTY_PREFIX" />
      <property name="propertyName" type="string" length="255" not-null="true"
         index="ENTITY_PROPERTY_NAME" />
      <!-- this holds the values (can be encoded) -->
      <property name="propertyValue" type="text" not-null="true" />
   </class>
</hibernate-mapping>
